<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.openstack.atlas</groupId>
        <artifactId>atlas-parent</artifactId>
        <version>1.27.08-SNAPSHOT</version>


    </parent>

    <artifactId>atlas-data-model</artifactId>
    <name>Openstack :: Atlas :: Data Model</name>

    <packaging>jar</packaging>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>atlas-util</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>jenkins</id>
            <activation>
                <property>
                    <name>env.BUILD_NUMBER</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>cobertura-maven-plugin</artifactId>
                        <configuration>
                            <instrumentation>
                                <excludes>
                                    <exclude>org.openstack.atlas.api.atom.*</exclude>
                                    <exclude>org/openstack/atlas/api/atom/**/*.class</exclude>
                                    <exclude>org/w3/atom/**/*.class</exclude>
                                    <exclude>org/openstack/atlas/docs/loadbalancers/api/management/v1/**/*.class</exclude>
                                    <exclude>org/openstack/atlas/docs/loadbalancers/api/v1/**/*.class</exclude>
                                </excludes>
                            </instrumentation>
                            <check />
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <optimize>false</optimize>
                    <debug>true</debug>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>1.3</version>
                <dependencies>
                    <dependency>
                        <groupId>org.jvnet.jaxb2-commons</groupId>
                        <artifactId>collection-setter-injector</artifactId>
                        <version>1.0</version>
                    </dependency>
                    <dependency>
                        <groupId>xew</groupId>
                        <artifactId>xew-openstack</artifactId>
                        <version>1.0.0</version>
                        <scope>runtime</scope>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>generate-atom-sources</id>
                        <configuration>
                            <staleFile>target/atom.staleFile</staleFile>
                            <extension>true</extension>
                            <schemaDirectory>
                                ${basedir}/src/main/resources/META-INF/xsd
                            </schemaDirectory>
                            <clearOutputDir>false</clearOutputDir>
                            <schemaFiles>atom.xsd</schemaFiles>
                            <packageName>org.w3.atom</packageName>
                            <!--<arguments>-Xcollection-setter-injector</arguments>-->
                            <arguments>-Xxew -setters</arguments>
                        </configuration>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>generate-load-balancer-api-sources</id>
                        <configuration>
                            <staleFile>target/lb.staleFile</staleFile>
                            <extension>true</extension>
                            <schemaDirectory>
                                ${basedir}/src/main/resources/META-INF/xsd
                            </schemaDirectory>
                            <clearOutputDir>false</clearOutputDir>
                            <schemaFiles>LoadBalancerApi.xsd</schemaFiles>
                            <packageName>org.openstack.atlas.docs.loadbalancers.api.v1</packageName>
                            <!--<arguments>-Xcollection-setter-injector</arguments>-->
                            <arguments>-Xxew -setters</arguments>
                            <bindingDirectory>${basedir}/src/main/resources/META-INF/xsd</bindingDirectory>
                            <bindingFiles>atomBindings.xjb</bindingFiles>
                        </configuration>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>generate-load-balancer-api-faults-sources</id>
                        <configuration>
                            <staleFile>target/lbf.staleFile</staleFile>
                            <extension>true</extension>
                            <schemaDirectory>
                                ${basedir}/src/main/resources/META-INF/xsd
                            </schemaDirectory>
                            <clearOutputDir>false</clearOutputDir>
                            <schemaFiles>LoadBalancerApiFaults.xsd</schemaFiles>
                            <packageName>org.openstack.atlas.docs.loadbalancers.api.v1.faults</packageName>
                            <arguments>-Xcollection-setter-injector</arguments>
                        </configuration>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>generate-load-balancer-management-api-sources</id>
                        <configuration>
                            <staleFile>target/lbm.staleFile</staleFile>
                            <extension>true</extension>
                            <schemaDirectory>
                                ${basedir}/src/main/resources/META-INF/xsd
                            </schemaDirectory>
                            <clearOutputDir>false</clearOutputDir>
                            <schemaFiles>LbManagementApi.xsd</schemaFiles>
                            <packageName>org.openstack.atlas.docs.loadbalancers.api.management.v1</packageName>
                            <!--<arguments>-Xcollection-setter-injector</arguments>-->
                            <arguments>-Xxew -setters</arguments>
                            <bindingDirectory>${basedir}/src/main/resources/META-INF/xsd</bindingDirectory>
                            <bindingFiles>atomBindings.xjb,bindings.xjb</bindingFiles>
                        </configuration>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
