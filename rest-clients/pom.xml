<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.openstack.atlas</groupId>
        <artifactId>atlas-parent</artifactId>
        <version>1.27.02-SNAPSHOT</version>
    </parent>

    <artifactId>atlas-rest-clients</artifactId>
    <version>1.27.02-SNAPSHOT</version>
    <name>Openstack :: Atlas :: Rest Clients</name>

    <packaging>pom</packaging>

    <modules>
        <module>auth</module>
        <module>atomhopper</module>
        <module>objs</module>
        <module>dns</module>
        <module>stingray-rest-client</module>
        <module>java-cloudfiles</module>
    </modules>

    <profiles>
        <profile>
            <id>jenkins</id>
            <activation>
                <property>
                    <name>env.BUILD_NUMBER</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>cobertura-maven-plugin</artifactId>
                        <configuration>
                            <instrumentation>
                                <excludes>
                                    <exclude>org/rackspace/stingray/client/action/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/bandwidth/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/config/**/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/counters/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/exception/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/extra/**/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/glb/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/list/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/location/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/manager/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/monitor/**/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/persistence/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/pool/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/protection/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/rate/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/settings/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/ssl/**/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/tmi/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/tm/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/traffic/**/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/trafficscript/*.class</exclude>
                                    <exclude>org/rackspace/stingray/client/virtualserver/*.class</exclude>
                                    <exclude>org/openstack/identity/client/access/**/*.class</exclude>
                                    <exclude>org/openstack/identity/client/api/**/*.class</exclude>
                                    <exclude>org/openstack/identity/client/domain/**/*.class</exclude>
                                    <exclude>org/openstack/identity/client/endpoints/**/*.class</exclude>
                                    <exclude>org/openstack/identity/client/faults/**/*.class</exclude>
                                    <exclude>org/openstack/identity/client/group/**/*.class</exclude>
                                    <exclude>org/openstack/identity/client/impersonation/**/*.class</exclude>
                                    <exclude>org/openstack/identity/client/roles/**/*.class</exclude>
                                    <exclude>org/openstack/identity/client/secretqa/**/*.class</exclude>
                                    <exclude>org/openstack/identity/client/services/**/*.class</exclude>
                                    <exclude>org/openstack/identity/client/tenant/**/*.class</exclude>
                                    <exclude>org/openstack/identity/client/token/**/*.class</exclude>
                                    <exclude>org/openstack/identity/client/user/**/*.class</exclude>
                                </excludes>
                            </instrumentation>
                            <check />
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <defaultGoal>install</defaultGoal>
        <pluginManagement>
            <plugins>
                <plugin>
                    <inherited>true</inherited>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>2.3.2</version>
                    <configuration>
                        <source>1.8</source>
                        <target>1.8</target>
                        <debug>true</debug>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>2.1</version>
                    <configuration>
                        <preparationGoals>clean install</preparationGoals>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
